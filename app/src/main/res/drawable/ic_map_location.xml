<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="oval">

            <size
                android:width="192dp"
                android:height="192dp" />
            <solid android:color="@color/map_location_alpha" />
            <stroke
                android:width="1dp"
                android:color="@color/map_location" />
        </shape>
    </item>
    <item android:gravity="center">
        <shape android:shape="oval">

            <size
                android:width="24dp"
                android:height="24dp" />
            <solid android:color="@color/map_location" />
            <stroke
                android:width="2dp"
                android:color="@android:color/white" />
        </shape>
    </item>
</layer-list>